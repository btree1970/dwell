# Example environment variables for Dwell
# Copy this to .env.local for local development or .env for production

# Environment
ENV=local
DEBUG=true
LOG_LEVEL=DEBUG

# Database settings
# For local development with Docker, use host.docker.internal
DATABASE_URL=postgresql://postgres:postgres@host.docker.internal:54322/postgres

# Supabase settings
# For local development with Docker, use host.docker.internal
# For production, use your actual Supabase URL
SUPABASE_URL=http://host.docker.internal:54321
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI API settings
OPENAI_API_KEY=your_openai_api_key_here

# Redis settings (for Celery workers)
REDIS_URL=redis://redis:6379/0

# API settings
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
API_PORT=8000
API_HOST=0.0.0.0

# Listings Project credentials (for data ingestion)
LISTINGS_EMAIL=your_email@example.com
LISTINGS_PASSWORD=your_password

# Celery settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Evaluation settings
EVALUATION_ENABLED=true
EVALUATION_FREQUENCY_HOURS=6
